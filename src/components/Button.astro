---
const {color, label} = Astro.props;
---

<button style={'background-color: ${color};'}>
    {label}
</button>

<style>
    button {
        padding: 14px 18px;
        background-color: #2563EB;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
    }
</style>